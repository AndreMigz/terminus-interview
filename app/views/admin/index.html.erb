<div class="container p-5">
  <h1 class="text-2xl font-bold">Properties</h1>
  <div class="overflow-x-auto my-10">
    <table class="table table-xs">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Address</th>
          <th>Market Value</th>
          <th>Address</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @properties.each do |property| %>
          <tr>
            <td><%= property.id %></td>
            <td><%= property.display_name %></td>
            <td><%= property.address %></td>
            <td><%= property.market_value %></td>
            <td><%= link_to 'Show', property, class:"btn btn-ghost btn-xs" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= will_paginate @properties %>
</div>